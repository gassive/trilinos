#!/bin/bash

EXTRA_ARGS=$@

cmake \
-D CMAKE_BUILD_TYPE:STRING=DEBUG \
-D Trilinos_ENABLE_CHECKED_STL:BOOL=ON \
-D BUILD_SHARED_LIBS:BOOL=ON \
-D DART_TESTING_TIMEOUT:STRING=90.0 \
-D Trilinos_EXTRA_REPOSITORIES:STRING="preCopyrightTrilinos;LIMEExt" \
-D TPL_ENABLE_MPI:BOOL=ON \
-D TPL_ENABLE_Boost:BOOL=ON \
-D Trilinos_ENABLE_TESTS:BOOL=ON \
-D Trilinos_ENABLE_EXPLICIT_INSTANTIATION:BOOL=ON \
-D CMAKE_INSTALL_PREFIX:PATH=$HOME/PROJECTS/install/trilinos/mpi/dbg \
-D Teuchos_ENABLE_COMPLEX:STRING=OFF \
$EXTRA_ARGS \
../../Trilinos
